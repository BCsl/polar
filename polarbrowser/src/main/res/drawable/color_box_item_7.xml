<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/color_box_item_7"/>
            <stroke android:width="2dp" android:color="@color/color_box_item_rect"></stroke>
            <corners android:radius="@dimen/color_box_item_radius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_box_item_7"/>
            <stroke android:width="2dp" android:color="@color/color_box_item_press_rect"></stroke>
            <corners android:radius="@dimen/color_box_item_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/color_box_item_7"/>
            <stroke android:width="2dp" android:color="@color/transparent"></stroke>
            <corners android:radius="@dimen/color_box_item_radius"/>
        </shape>
    </item>

</selector>