<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.polar.browser.common.ui.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_detail" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="26dp"
                android:textColor="@color/black"
                android:text="@string/download_edit_name_hint"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_file_name"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:textIsSelectable="true"
                android:textColor="#888888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="@string/download_file_size"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_file_size"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:textColor="#888888"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_support_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_size"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="@string/download_support_point"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_support_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_support_point"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:textColor="#888888"
                android:layout_marginRight="14dp"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_file_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_support_point"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="@string/download_file_path"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_file_path"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:textColor="#888888"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_file_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_path"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="@string/download_file_url"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_file_url"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:textColor="#888888"
                android:textIsSelectable="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>