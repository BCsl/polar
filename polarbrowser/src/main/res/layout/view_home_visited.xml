<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_visited"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/iv_home_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_visited"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_home_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_home_visited"
            android:layout_marginLeft="10dp"
            android:text="@string/visited_card_title"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/home_visited_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/home_visited_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.polar.browser.homepage.customlogo.VisitedItem
            android:id="@+id/logo_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.polar.browser.homepage.customlogo.VisitedItem
            android:id="@+id/logo_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.polar.browser.homepage.customlogo.VisitedItem
            android:id="@+id/logo_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.polar.browser.homepage.customlogo.VisitedItem
            android:id="@+id/logo_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.polar.browser.homepage.customlogo.VisitedItem
            android:id="@+id/logo_item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>