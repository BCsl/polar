<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/multiwindow_menu_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#232628"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/privacy_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="@string/incognito_mode"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/file_list_textsize_14" />

        <ImageView
            android:id="@+id/new_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_padding_10"
            android:paddingRight="@dimen/common_padding_10"
            android:layout_centerInParent="true"
            android:src="@drawable/tab_add_selector" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="26dp"
            android:src="@drawable/iv_back_selector" />
    </RelativeLayout>

    <View
        android:id="@+id/lr_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#0000"
        android:orientation="horizontal"></View>

    <ScrollView
        android:id="@+id/multiwindow_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/id_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

</merge>