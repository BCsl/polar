<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="@dimen/file_list_item_cb_marginLeft"
        >
    <LinearLayout
        android:id="@+id/ll_line1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_facebook"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/facebook"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/share_twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_twitter"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/twitter"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/share_whatsapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_whatsapp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/whatsapp"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/share_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_mail"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/email"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/common_padding_6"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_message"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/shortmessage"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/copy_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_copy"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/copy_link"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/vc_share_system"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_more"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/share_system"
            android:textColor="@color/file_list_text_name_color"
            android:textSize="@dimen/common_font_size_g"/>

        <TextView
            android:layout_width="@dimen/common_padding_6"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>