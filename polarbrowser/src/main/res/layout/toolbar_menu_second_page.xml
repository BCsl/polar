<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_screen_shot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_screenshot"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:text="@string/menu_item_edit"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_find_in_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_findinpage"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:text="@string/menu_item_search"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_share"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:text="@string/share"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_night_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_night_off"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:text="@string/menu_nightmode"
            android:textColor="@color/black87"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_fullscreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_fullscreen"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/setting_full_screen"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_font_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/setting_font_size"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_ad_block"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/setting_ad_block"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/btn_clean_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/menu_item_selector"
            android:drawableTop="@drawable/menu_clean_data"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/setting_clear_data"
            android:textColor="@color/black87"
            android:textSize="12sp"/>

    </LinearLayout>
</merge>