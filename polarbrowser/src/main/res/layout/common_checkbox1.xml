<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_check_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/download_dialog_margin_left"
    android:layout_marginRight="@dimen/download_dialog_margin_right"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/common_img_button"
        android:layout_width="@dimen/second_tv_margin_top"
        android:layout_height="@dimen/second_tv_margin_top" />

    <TextView
        android:id="@+id/common_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/common_font_color_12"
        android:textSize="@dimen/common_font_size_d" />

</LinearLayout>