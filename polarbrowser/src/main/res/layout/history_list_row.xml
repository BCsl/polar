<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/common_ll_root"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/common_list_row1"
        android:baselineAligned="false"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <com.polar.browser.common.ui.CommonCheckBox1
            android:id="@+id/common_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-12dp" />

        <LinearLayout
            android:id="@+id/common_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/common_img_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_ll_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/common_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/common_font_color_12"
                android:textSize="@dimen/common_font_size_d" />

            <TextView
                android:id="@+id/common_tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="summary"
                android:textColor="@color/common_font_color_11"
                android:textSize="@dimen/common_font_size_e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/common_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/common_font_color_10"
                android:textSize="@dimen/common_font_size_f"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/common_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@drawable/common_icon15"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_SettingActivityItem" />

</LinearLayout>