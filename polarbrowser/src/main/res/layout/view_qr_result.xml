<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6222120" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/qrcode_result"
                android:textColor="#f5f5f5"
                android:textSize="@dimen/common_font_size_c" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="@string/qrcode_type_text"
                android:textColor="#f5f5f5"
                android:textSize="@dimen/common_font_size_e" />

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/qrcode_type_text"
                android:textColor="#f5f5f5"
                android:maxLines="2"
                android:textSize="@dimen/common_font_size_e" />
            
            <TextView
                android:id="@+id/result_text_invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/qrcode_type_text"
                android:textColor="#f5f5f5"
                android:maxLines="3"
                android:visibility="invisible"
                android:textSize="@dimen/common_font_size_e" />
            
            <TextView
                android:id="@+id/text_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_text"
                android:text="@string/qrcode_text_more"
                android:textColor="#f5f5f5"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:textSize="@dimen/common_font_size_e" />
            
            <TextView
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/result_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_qr_search_selector"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="@color/qr_search_color_selector"
                android:textSize="@dimen/common_font_size_e" />

            <TextView
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_search"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_qr_search_selector"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="@color/qr_search_color_selector"
                android:textSize="@dimen/common_font_size_e" />

            <TextView
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_copy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_qr_search_selector"
                android:gravity="center"
                android:text="@string/qrcode_return"
                android:textColor="@color/qr_search_color_selector"
                android:textSize="@dimen/common_font_size_e" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>