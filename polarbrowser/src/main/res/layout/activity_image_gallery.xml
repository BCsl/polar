<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".download.ImageGalleryActivity">

    <com.polar.browser.download.view.HackyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        />

    <RelativeLayout
        android:id="@+id/image_gallery_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_content_height"
        android:background="#88323232">

        <ImageView
            android:id="@+id/image_gallery_back"
            android:layout_width="@dimen/common_titlebar_content_height"
            android:layout_height="@dimen/common_titlebar_content_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/common_title_left"/>

        <TextView
            android:id="@+id/image_gallery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:id="@+id/bottom_layout"
        android:gravity="center"
        android:background="#88323232">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/image_gallery_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/picture_btn_share_selector"
            android:scaleType="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image_gallery_set_wallpaper"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/picture_btn_wallpaper_selector"
            android:scaleType="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image_gallery_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/picture_btn_delete_selector"
            android:scaleType="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>
