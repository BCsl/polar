<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#40000000"
    android:orientation="vertical">

    <View
        android:id="@+id/space_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#64000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bottom_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/common_text_day"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="26dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_bottom_tip_close"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/view_bottom_tip_cancel_selector"
                android:textColor="@color/view_bottom_tip_cancel"
                android:textSize="13sp"
                android:text="@string/check_all_cancel"/>

            <Button
                android:id="@+id/tv_bottom_tip_setting"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/green_btn_selector"
                android:textColor="@color/view_bottom_tip_settings"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_tip_separate_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

</LinearLayout>